

@model DomainModel.Jobs.Job
@{
    ViewData["Title"] = "Job Details";
    Layout = "~/Views/Shared/_LayoutUserDashboard.cshtml";
}

<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'></link>
<style>
    .maincontainer  {
       margin-top: 130px;
       min-height: 74.8vh;
        text-align: -webkit-center;
    }

        .maincontainer .opening-details {
            width: 48%;
            padding: 20px 20px 20px 20px;
            text-align: left;
            box-shadow: 0 4px 10px 0 rgba(0,117,194,0.20);
            border-radius: 5px;
        }

    

    .job-cards{
        width: 100%;
    }

    .maincontainer .opening-details h1 {
        font-weight: 600;
        font-size: 48px;
        margin-bottom: 25px;
        font-family: "Poppins";
    }



    .maincontainer .opening-details p {
        font-weight: 400;
        font-size: 16px;
        font-family: "Poppins";
        margin-bottom: 10px;
    }



    .maincontainer .opening-details .apply {
        background-color: #008BFF;
        color: #FFFFFF;
        border: none;
        padding: 5px 20px 5px 20px;
        font-family: "Poppins";
        border-radius: 5px;

    }

    .maincontainer .opening-details .apply:hover {
        background-color: #008BFF;
        color: #FFFFFF;
        font-weight: 700;
    }
</style>
 <div class="container">
<div class="container-fluid p-0 maincontainer">
    <div class="col-lg-12 opening-details">
        
            <div class="col-lg-8 job-cards">
                <h1>@Model.JobTitle</h1>
                <p>@Model.Description</p>
                <p><strong>Department:</strong> @Model.DepartmentName</p>
                    <p><strong>Location:</strong> @Model.Country_Home @Model.State_Home @Model.City_Home</p>
                <p><strong>Salary:</strong> @Model.Salary @Model.CurrencyType_Home</p>
                <p><strong>Experience:</strong> @Model.MinExperience - @Model.MaxExperience years</p>
                <p><strong>Job Type:</strong> @Model.JobType_Home</p>
                <p><strong>Job Mode:</strong> @Model.JobMode_Home</p>
                  
            </div>
       
       
            <div class="col-lg-8 job-cards" style="text-align: center;">
                  
                     <button class="mt-auto apply"  onclick="CreateAppliedJob(@Model.JobId)">
                    Apply Now
                    </button>
            </div>
        
    </div>
</div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

 <script src="~/js/CreateAppliedjob.js"></script>

