@model DomainModel.ContactQueries.ContactQuery

@{
    ViewData["Title"] = "ContactUs";

    if(User.FindFirst(claim=>claim.Type==System.Security.Claims.ClaimTypes.Role)?.Value != null){
        Layout = "~/Views/Shared/_LayoutUserDashboard.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    
}



<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Kodchasan:ital,wght@0,400;0,600;0,700;1,500;1,700&family=Montserrat:wght@500&family=Poppins:wght@300;400;600;700;800&family=Roboto&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/contactus.css">
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'><link>
    <title>Job Portal</title>
</head>
<div class="container-fluid p-0 maincontainer">
    <div class="col-lg-11 d-flex GetIn-main">
        <div class="col-lg-7 GetIn-right">
         <h1 class="title-info">Get In Touch</h1>
             <div class="col-lg contact-us-main">
        <div class="col-lg mb-5 contact-us">
             <form class="row g-5 needs-validation" asp-controller="Home" asp-action="ContactUs" id="ContactForm">
                         <div class="col-md-5">
                             <label for="validationCustom01" class="form-label">First name <span class="redcolor">*</span></label>
                               <input type="text" class="form-control" id="FirstName" name="FirstName"  placeholder="First name" asp-for="FirstName">

                         </div>
                        <div class="col-md-5">
                             <label for="validationCustom02" class="form-label">Last name <span class="redcolor">*</span></label>
                             <input type="text" class="form-control" id="LastName" name="LastName"  placeholder="Last name" asp-for="LastName">

                         </div>
                        <div class="col-md-5 mt-3">
                                <label for="validationCustom02" class="form-label">Email <span class="redcolor">*</span></label>
                                <input type="text" class="form-control" id="Email" name="Email"  placeholder="Email" asp-for="Email">

                         </div>
                        <div class="col-md-5 mt-3">
                                <label for="validationCustom02" class="form-label">Phone Number <span class="redcolor">*</span></label>
                                <input type="tel" class="form-control" id="Phone" name="Phone"  placeholder="Phone Number" asp-for="Phone">
                         </div>
                         <div class="form-floating col-lg-10 mt-3">
                             <textarea class="form-control" placeholder="Leave a comment here" id="Message" name="Message" style="height: 100px" asp-for="Message" maxlength="1000"></textarea>
                             <label class="messges1 ms-4" for="floatingTextarea2">Message</label>
                         </div>

                         <div class="form-floating col-lg-10 mt-3">

                            <dnt-captcha asp-captcha-generator-max="999999"
                                 asp-captcha-generator-min="111111"
                                 asp-captcha-generator-language="English"
                                 asp-captcha-generator-display-mode="ShowDigits"
                                 asp-fore-color="#333333"
                                 asp-back-color="#ccc"
                                 asp-font-name="Tahoma"
                                 asp-font-size="60"                                 
                                 asp-use-relative-urls="true"
                                 asp-placeholder="Enter Captcha"
                                 asp-text-box-class="text-box form-control"
                                 asp-text-box-template="<span class='input-group-prepend'><span class='form-group-text'></span></span>{0}"
                                 asp-validation-error-message="Please enter captcha"
                                 asp-validation-message-class="text-danger"
                                 asp-use-noise="false"
                                 asp-refresh-button-class="fas fa-redo btn-sm"
                                 asp-show-refresh-button=true />

                         </div>

                

                

                    @if (TempData["captchaError"] != null)
                    {
                        <span class="text-danger alert alert-danger mt-2">@TempData["captchaError"]</span>
                    }
                
                


                <div class="col-md-6 col-sm-6 col-xs-12 text-center">
                    <p>
                        <button type="submit" class="wpcf7-submit btn-style-new" style="margin-top:12px">Send Message</button>
                    </p>
                </div>
                <h6 style="color: red; font-weight: bold; display:none" id="SuccessMessage">@ViewBag.Message</h6>
            </form>
        </div>
            </div>
    </div>
        <div class="col-lg-5 contact-info">
            <div class="col-lg-4 mb-3 contact-info-main1">
                <h4>Contact Information</h4>
                <ul class="address-list">
                    <li>
                        <p>
                            <i class="fa fa-map-marker me-2"></i>
                            93 Shennecossett Rd, Suite # 104, Groton, &nbsp; CT 06340
                        </p>
                    </li>
                    <li>
                        <p>
                            <i class="fa fa-phone me-2"></i> +1(866) 968-9995
                        </p>
                    </li>
                    <li>
                        <p>
                            <i class="fa fa-envelope me-2"></i>solutions@i2econsulting.com
                        </p>
                    </li>
                </ul>
            </div>
            <div class="col-lg-4 map-details">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1014.2400251573895!2d-72.07420207662217!3d41.33687008869503!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e60af0ac40f35f%3A0x1139e03e4c70b690!2si2e%20Consulting!5e0!3m2!1sen!2sin!4v1694701669948!5m2!1sen!2sin"  style="width: 100%;" height="255" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

        </div>

    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/contactus.js"></script>
<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
