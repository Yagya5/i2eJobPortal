@model IEnumerable<DomainModel.Jobs.Job>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";    
}


<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Kodchasan:ital,wght@0,400;0,600;0,700;1,500;1,700&family=Montserrat:wght@500&family=Poppins:wght@300;400;600;700;800&family=Roboto&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/homeStyle.css">
    <title>Job Portal</title>
    <style>
        .cuttoff-text {
            --max-lines: 1;
            overflow: hidden;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: var(--max-lines);
        }
    </style>
</head>

    <div class="container-fluid p-0 maincontainer">
       
        <br />
        <br />
    
        <div class="col-lg-12 d-flex mb-5 second-section">
            <div class="col-lg-6 text-section">
                <div class="text-title slide-left">
                    Love challenges?<br>
                    You'll be the <span>right fit</span>
                </div>
                <div class="text-details slide-left">We ideate, execute, and have loads of fun.<br> Want to join us?</div>
               @* <form class="d-flex searchtab slide-left" role="search">
                    <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>*@
            </div>
            <div class="col-lg-6 image-section">
                <img src="~/images/Croods Mobile.png" alt="" srcset="">
            </div>
        </div>
        <br /><br />
        <div class="col-lg-12 third-section mb-5">
            <div class="find-job-section">
                <h1>Find the perfect job</h1>
                <div class="d-flex justify-content-between job-details">
                    <a class="job-cards" href="" >
                        <div class="job-type">Internship</div>
                        <div class="job-img">
                            <img src="~/images/Croods Friends.png" alt="">
                        </div>
                    </a>
                      <a class="job-cards second-job-card" href="">
                        <div class="job-type">Full Time jobs</div>
                        <div class="job-img">
                            <img src="~/images/Croods Peaceful Place.png" alt="" srcset="">
                        </div>
                    </a>
                     <a class="job-cards" href="" >
                        <div class="job-type">Part Time jobs</div>
                        <div class="job-img">
                            <img src="~/images/Croods The Feedback.png" alt="" srcset="">
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <br /><br />
        <div class="col-lg mb-5 fourth-section">
            <div class="opening-details mb-4">
                <h1>Current Job Openings</h1>
            <div class="col-lg-9 mb-5 opening-list">
                <div class="row ms-5 g-4">
                    @foreach (var item in Model.Take(4))
                    {
                          <div class="col-sm-4 cardmain">
                                <div class="card">
                                <div class="card-body">
                                    <div class="col-lg d-flex justify-content-between card-body-main">
                                        <div class="job-type">

                                            <div class="job-name">

                                                @item.JobTitle
                                            </div>
                                            <div class="job-location">
                                                <i class="fa-solid fa-location-dot me-2"></i>@item.JobMode_Home  @item.State_Home, @item.City_Home
                                                <i class="fa fa-briefcase me-2" aria-hidden="true"></i>@item.MinExperience - @item.MaxExperience
                                            </div>
                                            <div discribe-Job>
                                                <p class="cuttoff-text">@item.Description</p>
                                            </div>

                                        </div>
                                        <div class="apply-btn d-flex align-items-end flex-column mb-3">
                                            <button class="mt-auto apply" id="apply-jobs" onclick="OpenDetails(@item.JobId)">
                                                View Details
                                            </button>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
            <a type="button" id="load-more" class="loadmore mt-5 mb-5" href="/Home/Jobs/">Load More</a>
            </div>
        </div>
        <br /><br />
        <div class="col-lg mb-5 fifth-section">
            <div class="mission-vision">
                <div class="our-mission">
                    <h1>Our Mission</h1>
                    <img src="~/images/Croods Sitting on Floor.png" alt="" srcset="">
                    <div class="mission-contain">
                        Create an environment of trust that<br> empowers businesses to make<br>
                        informed decisions faster.
                    </div>
                </div>
                <div class="our-mission">
                    <h1>Our Mission</h1>
                    <img src="~/images/Croods Avatar and Backdrop.png" alt="" srcset="">
                    <div class="mission-contain">
                        Put every life science company on the<br> path of digital
                        transformation
                        and<br> innovation.
                    </div>
                </div>
            </div>
        </div>
        <br /><br />
        <div class="col-lg mb-5 sixth-section">
            <h1>Our Culture</h1>
            <div class="our-culture mb-5">
                <div class="culture-text">
                    <p>
                        We are a very close-knit team of individuals coming from<br> different walks of life. What
                        unites us is
                        our passion to<br> innovate and thrive. There is no office politics or micro-<br>management. We
                        practice an
                        open and transparent culture<br> with flexible office hours. For us work life balance is
                        important<br> and
                        so we almost never work on weekends.
                    </p>

                    <p>
                        Our work culture imparts these values in all our members. We<br> believe in working hard but
                        never miss
                        out on fun. Office<br> interactions, fun events, celebrations have helped us grow <br>into a
                        close-knit
                        teams. At i2e, we balance work and fun and<br> achieve maximum productivity.
                    </p>
                </div>
                <div class="culture-text">
                    <img src="~/images/image 1.png" alt="" srcset="">
                </div>
            </div>
        </div>
        <br /><br />

        @* <div class="col-lg-12 more-about">
            <div class="col-lg d-flex about-main">
                <div class="col-lg-8 text-about">Want to know more about what we do?</div>
                <div class="col-lg-4 explore-btn"> <button class="explore-more">Explore More</button></div>
            </div>
        </div> *@

   </div>

<script type="text/javascript">
    
    function OpenDetails(JobId) {
        // Redirect to the event details page, passing the event ID as a query parameter
        window.location.href = '/Home/Details?id=' + JobId;
    }
  
</script> 