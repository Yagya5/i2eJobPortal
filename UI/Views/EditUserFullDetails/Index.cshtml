<style>

    .row-centered {
        display: flex;
        justify-content: center;
    }

    .image-container {
        text-align: center; 
    }

    #profileImageInform {
        max-width: 100%;
        max-height: 100%;
        border-radius: 50%; 
        border: 2px solid black;
        cursor: pointer;
        transition: transform 0.2s; 
    }

    .tooltip {
        position: absolute;
        top: 18%;
        left: 47.3%; 
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 12px;
        white-space: nowrap;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.2s, visibility 0.2s;
    }

    #profileImageInform:hover + .tooltip {
        opacity: 1;
        visibility: visible;
    }

    .dx-field-item-custom-label-content {
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        font-size: 16px;
        font-family: "Poppins";
    }

    .dx-form-group-caption {
        font-size: 24px;
        font-family: "Poppins";
        font-weight: 600;
    }

    .demo-container img {
        border: 3px solid #008BFF !important;
    }

    .dx-texteditor-input-container {
        border: 1px solid #008BFF;
    }

    .dx-button-content .dx-dropdowneditor-icon {
        color: #008BFF;
    }

    .dx-button-has-text .dx-button-content {
        padding: 8px 18px;
        background-color: #008BFF;
        font-size: 16px;
        font-family: "Poppins";
        font-weight: 400;
        color: #fff;
    }

        .dx-button-has-text .dx-button-content:hover {
            background-color: #008BFF;
            font-weight: 700;
        }

    .dx-dropdowneditor-button {
        position: relative;
        float: right;
        height: 100%;
        cursor: pointer;
        width: 34px;
        min-width: 34px;
        padding: 1px;
        border-radius: 0px;
        border: 1px solid #008BFF;
    }

    #pdfEmbed{
        border: 1px solid #008BFF !important;
    }

    /* Style for the modal */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        justify-content: center;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1000;
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 500px;
        border-radius: 5px;
        position: relative;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover, .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
    }
</style>

