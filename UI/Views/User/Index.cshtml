@model IEnumerable<DomainModel.Users.User>

@{
   // Layout = null;   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Users</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="container">
        <a asp-controller="AdminDashboard" asp-action="Index" asp-area="Admin" class="btn btn-success">Move to Admin Areas</a>
        <h2>Users Table</h2>        
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Birth Date</th>
                    <th>Phone Number</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Role Id</th>
                    <th>Role Name</th>
                </tr>
            </thead>
            <tbody>

                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.Gender</td>
                        <td>@item.BirthDate</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.City</td>
                        <td>@item.State</td>
                        <td>@item.RoleId</td>
                        <td>@item.RoleName</td>
                        
                    </tr>
                    
                }               
                
            </tbody>
        </table>
    </div>
</body>
</html>
